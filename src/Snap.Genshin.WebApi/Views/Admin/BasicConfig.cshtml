@model BasicConfigViewModel
@{
    ViewData["Title"] = "基本配置";
}

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10">
        <h1 class="font-size-h1">基本配置</h1>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-primary" role="alert">@(ViewBag.Message)</div>
        }
        <form asp-action="SaveBasicConfig">
          <div class="mb-3">
            <label for="manifesto" class="form-label">公告</label>
            <textarea asp-for="Manifesto" class="form-control" id="manifesto" rows="3">@(Model.Manifesto)</textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">
              <span>保存</span>
            </button>
          </div>
        </form>
    </div>
  </div>
</div>
